<h1>Login Médicos</h1>

<form action="/medico/login" method="POST">
  <div class="div-dashed">
    <h2>Já tenho cadastro</h2>
    <label for="username">Usuário: </label>
    <input type="text" name="username" placeholder="Digite seu e-mail" required>
    <label for="password">Senha: </label>
    <input type="password" name="password" placeholder="Digite sua senha">
    <input type="submit" value="Login" name="gravar" id="gravar">
    <input type="button" value="Voltar" name="voltar" id="voltar" onclick="location.href='/';">
  </div>
</form>